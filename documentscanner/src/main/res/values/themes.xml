<resources>

    <style name="DocumentScannerTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/onSecondaryColor</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorPrimarySurface">@color/colorPrimarySurface</item>
        <item name="backgroundColor">@color/black</item>
        <item name="colorError">@color/red_900</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="chipStyle">@style/Widget.DocumentScanner.Chip</item>
        <item name="textInputStyle">@style/Widget.DocumentScanner.TextInputLayout</item>
        <item name="editTextStyle">@style/Widget.DocumentScanner.TextInputEditText</item>
        <item name="materialAlertDialogTheme">@style/Widget.DocumentScanner.MaterialAlertDialog</item>
        <item name="circularProgressIndicatorStyle">@style/Widget.DocumentScanner.CircularProgressIndicator</item>
        <item name="materialButtonStyle">@style/Widget.DocumentScanner.Button</item>
        <item name="snackbarStyle">@style/Widget.DocumentScanner.SnackBar</item>

        <item name="textAppearanceHeadline6">@style/TextAppearance.DocumentScanner.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.DocumentScanner.Subtitle1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.DocumentScanner.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.DocumentScanner.Caption</item>
    </style>

    <style name="ThemeOverlay.DocumentScanner.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">?colorSecondary</item>
    </style>

    <style name="ThemeOverlay.DocumentScanner.Secondary" parent="">
        <item name="colorPrimary">?colorSecondary</item>
    </style>
</resources>
